# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page


# Theme service
GET     /index/$pageNum<[0-9]+>                                     controllers.Application.getIndex(pageNum:Int)
GET     /topic/list/$themeId<[0-9]+>                                controllers.Application.getThemeList(themeId:Long)
GET     /comm/detail/$id<[0-9]+>                                    controllers.Application.getItemDetail(id:Long,skuId: Long ?= -1)
GET     /comm/detail/$id<[0-9]+>/$skuId<[0-9]+>                     controllers.Application.getItemDetail(id:Long,skuId:Long)
GET     /comm/detail/web/$id<[0-9]+>                                controllers.Application.getItemDetailWeb(id:Long,skuId: Long ?= -1)
GET     /comm/detail/web/$id<[0-9]+>/$skuId<[0-9]+>                 controllers.Application.getItemDetailWeb(id:Long,skuId:Long)
GET     /comm/cart/amount                                           controllers.Application.getCartAmount()


#views
GET     /comm/views/about                                           controllers.CommonViewCtrl.aboutUs()
GET     /comm/views/privacy                                         controllers.CommonViewCtrl.privacy()
GET     /comm/views/agreement                                       controllers.CommonViewCtrl.agreement()


GET     /hmm/app/download/:fileName                                 controllers.CommonViewCtrl.androidDownload(fileName:String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                               controllers.Assets.versioned(path="/public", file: Asset)
