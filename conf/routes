# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                   controllers.Application.listUsers(lang = "cn")
GET     /$lang<(cn|en|kr)>                  controllers.Application.listUsers(lang)

GET     /brands                             controllers.Application.listBrands(lang = "cn")
GET     /$lang<(cn|en|kr)>/brands           controllers.Application.listBrands(lang)

GET     /validate                           controllers.Application.validate(lang = "cn")
GET     /$lang<(cn|en|kr)>/validate         controllers.Application.validate(lang)

POST    /validation                         controllers.Application.validation()

#GET    /user/:id                           controllers.Application.showUser(id: Long)

# Theme service
GET     /getthemes/$pageNum<[0-9]+>         controllers.Application.getThemes(pageNum:Int)
GET     /getthemelist/:themeId              controllers.Application.getThemeList(themeId:Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
