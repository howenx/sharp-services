# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page


# Theme service
GET     /index/$pageNum<[0-9]+>                                     controllers.Application.getIndex(pageNum:Int)
GET     /topic/list/$themeId<[0-9]+>                                controllers.Application.getThemeList(themeId:Long)
GET     /comm/detail/$id<[0-9]+>                                    controllers.Application.getItemDetail(id:Long,skuId: Long ?= -1)
GET     /comm/detail/$id<[0-9]+>/$skuId<[0-9]+>                     controllers.Application.getItemDetail(id:Long,skuId:Long)
GET     /id/address                                                 controllers.Application.allAddress()
POST    /id/address/update                                          controllers.Application.handleAddress(handle:Integer ?= 0)
POST    /id/address/add                                             controllers.Application.handleAddress(handle:Integer ?= 1)
POST    /id/address/del                                             controllers.Application.handleAddress(handle:Integer ?= 2)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                               controllers.Assets.versioned(path="/public", file: Asset)
