# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page


# Theme service
GET     /index/$pageNum<[0-9]+>                                               controllers.Application.getIndex(pageNum:Int)
GET     /topic/list/$themeId<[0-9]+>                                          controllers.ThemeListCtrl.getThemeList(themeId:Long)
GET     /comm/cart/amount                                                     controllers.Application.getCartAmount()


#views
GET     /comm/views/about                                                     controllers.CommonViewCtrl.aboutUs()
GET     /comm/views/privacy                                                   controllers.CommonViewCtrl.privacy()
GET     /comm/views/agreement                                                 controllers.CommonViewCtrl.agreement()


#Detail
GET     /comm/detail/$itemId<[0-9]+>                                                controllers.DetailCtrl.getItemDetail(subjectFlag:Integer ?=1,itemId:Long,skuId: Long ?= -1,varyId: Long ?= -1)
GET     /comm/detail/$itemId<[0-9]+>/$skuId<[0-9]+>                                 controllers.DetailCtrl.getItemDetail(subjectFlag:Integer ?=1,itemId:Long,skuId:Long,varyId: Long ?= -1)
GET     /comm/detail/$itemId<[0-9]+>/$skuId<[0-9]+>/$varyId<[0-9]+>                 controllers.DetailCtrl.getItemDetail(subjectFlag:Integer ?=1,itemId:Long,skuId:Long,varyId: Long)


#PinDetail
GET     /comm/pin/detail/$itemId<[0-9]+>/$skuId<[0-9]+>/$pinId<[0-9]+>              controllers.DetailCtrl.getPinDetail(itemId:Long,skuId:Long,pinId: Long)


#SubjectDetail
GET     /comm/subject/detail/$itemId<[0-9]+>/$skuId<[0-9]+>/$varyId<[0-9]+>         controllers.DetailCtrl.getItemDetail(subjectFlag:Integer ?=2,itemId:Long,skuId:Long,varyId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                                         controllers.Assets.versioned(path="/public", file: Asset)
